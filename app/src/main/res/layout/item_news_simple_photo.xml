<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="一个有希望的民族不能没有英雄"
        android:textSize="17sp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/black_text"
        android:layout_toLeftOf="@id/iv_simple"
        android:maxLines="3"
        android:ellipsize="end"
        android:gravity="top"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:id="@+id/llt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/iv_simple"
        android:layout_above="@id/view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_stick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stick"
            android:textColor="@color/mews_type_top"
            android:padding="3dp"
            android:visibility="gone"
            android:layout_marginRight="3dp"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="澎湃新闻"
            android:maxLength="6"
            android:textColor="@color/news_resource"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="13小时前"
            android:textColor="@color/text_grey"/>

        <TextView
            android:id="@+id/tv_read"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="200万阅"
            android:textColor="@color/text_grey"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_small_delete"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_simple"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:src="@drawable/bg_motherland"
        android:scaleType="centerCrop"
        android:layout_width="115dp"
        android:layout_height="82dp"/>

    <View
        android:id="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv_simple"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey_bg"/>

</RelativeLayout>